<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itchihuahuaii.sistemasoperativosmoviles.FragmentDialog">


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical" android:padding="7dp" >
        <TextView
            android:id="@+id/txtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Practica Dialogs " />
        <Button
            android:id="@+id/btn_alert"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Alert Dialog Box" />
        <Button
            android:id="@+id/btn_custom_dialog"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Custom Dialog Box" />
    </LinearLayout>

</FrameLayout>
